#!/bin/bash

printf "\n"
printf "Wipe Database Permissions\n"
printf "=========================\n"
php xcli.dbx db:wipe role
php xcli.dbx db:wipe permission
php xcli.dbx db:wipe role_permission

printf "\n"
printf "Seed All Roles\n"
printf "####################\n"
php xcli.dbx db:feed db/data/role.json

printf "\n"
printf "Seed All Permissions\n"
printf "####################\n"
php xcli.dbx db:feed db/data/permission.json

printf "\n"
printf "Seed Administrator Permissions\n"
printf "##############################\n"
php xcli.dbx db:feed db/data/admin/role_permission.json